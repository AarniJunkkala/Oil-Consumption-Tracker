<Window x:Class="Oil_Consumption_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oil_Consumption_Tracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="25,0,0,0" TextWrapping="Wrap" Text="OCT — Oil Consumption Tracker" VerticalAlignment="Center" FontSize="36" FontFamily="Segoe UI"/>
        <Separator Grid.Row="1" Height="2" Background="Black"  Margin="0,5"/>
        <Separator Grid.Row="3" Height="2" Background="Black" />
        <Button Grid.Row="2" Content="Lisää auto" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Center"/>
        <DataGrid Grid.Row="4" ItemsSource="{Binding autot}"
                  AutoGenerateColumns="False"
                  Name="AutoDataGrid"
                  RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rekisterinumero" Binding="{Binding rekisteriNumero}" />
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DataGrid ItemsSource="{Binding mittaukset}"
                              AutoGenerateColumns="False"
                              Margin="20,0,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Öljyn määrä" Binding="{Binding oljynMaara}" />
                            <DataGridTextColumn Header="Päiväys" Binding="{Binding paivays}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</Window>
